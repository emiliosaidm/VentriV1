<% photo = car.photo %>
<div style="border: 1px solid grey; width: 360px; border-radius: 5px 5px 5px 5px; margin: 20px auto;">
  <div width=80vw style="display: flex; justify-content:center;">
    <div style="text-align: center;">
      <div>
        <% if car.photo.attached?%>
          <%= cl_image_tag photo.key, width: 360, height: 250, crop: :fill, style:"border-radius: 5px 5px 0px 0px; " %>
        <% else %>
          <img src="https://www.fintelgaseluce.it/wp-content/uploads/2015/07/FEG-facebook-placeholder_shop.png" style="height: 250px; width: 360px; border-radius: 5px 5px 0px 0px"/>
        <% end %>
      </div>
      <h1 style="font-weight: 700; font-size:21px; font-family: nunito, helvetica, sans-serif; margin-top:15px;"><%=car.make%> <%=car.model%> <%=car.year%></h1>
      <hr width = 310px style="margin: 0px auto;">
    </div>
  </div>

  <div style="width: 360px;">
    <div style="display: flex; align-items: center;">
      <img style="height: 41px; width: 41px; border-radius:50%; margin-right: 10px; margin-top:-10px; margin-left: 15px; border:1px solid white; box-shadow: 0 1px 2px rgba(0,0,0,0.2);" src="https://pcafalcons.com/wp-content/uploads/2019/08/no-profile-picture-icon-female-0-e1564976045606.jpg" alt="">
      <div style="display: flex; align-items: center; justify-content: space-between; width: 70%;">
        <div>
          <p><%=car.owner.first_name%></p>
          <p style="margin-top: -18px; font-family: nunito, helvetica, sans-serif;">5.0 (20 trips)</p>
        </div>
        <div>
          <p><strong>$<%=car.price%>/dia</strong></p>
          <p style="margin-top: -18px; font-family: nunito, helvetica, sans-serif; text-decoration: underline;">$<%=car.price%> est.</p>
        </div>
      </div>
    </div>
  </div>
</div>
